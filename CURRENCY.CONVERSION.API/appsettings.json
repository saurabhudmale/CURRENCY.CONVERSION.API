{
    "AllowedHosts": "*",
    "MongoDbSettings": {
        "ConnectionString": "mongodb://localhost:27017",
        "DatabaseName": "Currency"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Information",
            "System": "Information",
            "Quartz": "Information"
        }
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.MongoDB" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning",
                "Quartz": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "MongoDB",
                "Args": {
                    "databaseUrl": "mongodb://localhost:27017/Currency",
                    "collectionName": "ApplicationLogs",
                    "restrictedToMinimumLevel": "Information"
                }
            }
        ]
    }
}